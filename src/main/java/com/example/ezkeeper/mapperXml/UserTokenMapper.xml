<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.ezkeeper.mappers.UserTokenMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.ezkeeper.model.UserToken">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="pw" property="pw" />
    </resultMap>

    <resultMap id="TokenResultMap" extends="BaseResultMap" type="com.example.ezkeeper.model.UserToken">
        <association property="user" resultMap="com.example.ezkeeper.mappers.UsersMapper.BaseResultMap" javaType="com.example.ezkeeper.model.Users" columnPrefix="users_"/>
    </resultMap>

    <select id="getTokenByName" resultType="com.example.ezkeeper.model.UserToken" resultMap="TokenResultMap">
        select t.*,
               u.id users_id, u.user_name users_user_name, u.emil users_emil, u.phone users_phone, u.create_time users_create_time
        from user_token as t
        join users as u
        on t.user_id = u.id
        where #{userName} = u.user_name;
    </select>

</mapper>
